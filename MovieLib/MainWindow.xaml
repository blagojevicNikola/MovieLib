<Window x:Class="MovieLib.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieLib"
        xmlns:ic="http://metro.mahapps.com/winfx/xaml/iconpacks" 
        xmlns:views="clr-namespace:MovieLib.Views"
        mc:Ignorable="d"
        Title="Login" Height="650" Width="1000"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown">

    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <UserControl Content="{Binding CurrentViewModel, Mode=TwoWay}"/>
</Window>
